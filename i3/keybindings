# workspace 
bindsym $mod+a workspace 1
bindsym $mod+s workspace 2
bindsym $mod+d workspace 3
bindsym $mod+f workspace 4
bindsym $mod+g workspace 5

# app
bindsym $mod+Return exec kitty
#bindsym $mod+r exec --no-startup-id dmenu_run
bindsym $mod+r exec rofi -show run 
bindsym $mod+p exec xfce4-screenshooter -f -o "xclip -selection clipboard -t image/png"

# window 
bindsym $mod+Shift+q kill
bindsym $mod+Shift+space floating toggle

# i3 
bindsym $mod+Shift+R reload

# focus
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down

bindsym $mod+Shift+v split v 
bindsym $mod+Shift+h split h 

# scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad

# Audio 
bindsym $mod+Shift+b exec --no-startup-id switch-audio.sh
